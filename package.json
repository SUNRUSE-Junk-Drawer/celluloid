{
  "name": "celluloid",
  "description": "Realtime 3D cel shading, anywhere.",
  "version": "0.0.0",
  "scripts": {
    "start": "npm install && npm-run-all typescript uglify-for-hosting uglify-for-debugging build-html && npm-run-all --parallel watch host debug",
    "watch": "npm-run-all --parallel watch-typescript watch-test watch-uglify-for-hosting watch-uglify-for-debugging watch-build-html",
    "watch-typescript": "tsc --watch --project tsconfig.json",
    "watch-test": "chokidar dist/index.js spec/**.js --command \"npm test\"",
    "watch-uglify-for-hosting": "chokidar dist/index.js --command \"npm run-script uglify-for-hosting\"",
    "watch-uglify-for-debugging": "chokidar dist/index.js --command \"npm run-script uglify-for-debugging\"",
    "watch-build-html": "chokidar build-html.js src/favicon.png --command \"npm run-script build-html\"",
    "typescript": "tsc --project tsconfig.json",
    "test": "nyc --check-coverage --lines 100 --functions 100 --branches 100 --statements 100 --include dist/index.js jasmine",
    "uglify-for-hosting": "uglifyjs --compress --mangle --toplevel dist/index.js --output dist/index.min.js",
    "uglify-for-debugging": "uglifyjs --beautify --output dist/debugger.js dist/index.js",
    "build-html": "babel-node ./build-html.js",
    "host": "mkdirp dist && cd dist && http-static",
    "debug": "electron -r @babel/register ./debugger/main.js"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.42",
    "@babel/core": "7.0.0-beta.42",
    "@babel/node": "7.0.0-beta.42",
    "@babel/preset-env": "7.0.0-beta.42",
    "@babel/register": "7.0.0-beta.42",
    "chokidar-cli": "1.2.1",
    "electron": "3.0.13",
    "favicons": "5.3.0",
    "gl-matrix": "2.8.1",
    "html-minifier": "3.5.21",
    "http-static": "0.1.1",
    "imagemin": "6.0.0",
    "imagemin-pngcrush": "6.0.0",
    "jasmine": "3.3.1",
    "mkdirp": "0.5.1",
    "npm-run-all": "4.1.5",
    "nyc": "13.1.0",
    "rewire": "4.0.1",
    "typescript": "3.2.2",
    "uglify-js": "3.4.9"
  },
  "dependencies": {}
}
