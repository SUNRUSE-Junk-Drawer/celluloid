{
    "name": "celluloid",
    "description": "Realtime 3D cel shading, anywhere.",
    "version": "0.0.0",
    "scripts": {
        "start": "npm install && npm-run-all --parallel watch host",
        "watch": "npm run-script prepublish && npm-run-all --parallel watch-babel watch-test watch-uglify watch-build-html",
        "watch-babel": "chokidar src/**.js --command \"npm run-script babel\"",
        "watch-test": "chokidar dist/index.js spec/**.js --command \"npm test\"",
        "watch-uglify": "chokidar dist/index.js --command \"npm run-script uglify\"",
        "watch-build-html": "chokidar build-html.js src/favicon.png --command \"npm run-script build-html\"",
        "prepublish": "npm-run-all babel test uglify build-html",
        "test": "jasmine",
        "babel": "mkdirp dist && babel --config-file ./browser.babelrc src --ignore src/header.js --out-file dist/index.js",
        "uglify": "uglifyjs --compress --mangle --toplevel src/header.js dist/index.js --output dist/index.min.js",
        "build-html": "babel-node ./build-html.js",
        "host": "mkdirp dist && cd dist && http-static"
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0-beta.42",
        "@babel/core": "^7.0.0-beta.42",
        "@babel/node": "^7.0.0-beta.42",
        "@babel/preset-env": "^7.0.0-beta.42",
        "chokidar-cli": "^1.2.0",
        "favicons": "^4.8.6",
        "gl-matrix": "^2.4.0",
        "html-minifier": "^3.5.12",
        "http-static": "0.0.8",
        "imagemin": "^5.3.1",
        "imagemin-pngcrush": "^5.1.0",
        "jasmine": "^3.1.0",
        "mkdirp": "^0.5.1",
        "npm-run-all": "^4.1.2",
        "rewire": "^3.0.2",
        "uglify-js": "^3.3.16"
    },
    "dependencies": {}
}
