{
    "name": "celluloid",
    "description": "Realtime 3D cel shading, anywhere.",
    "version": "0.0.0",
    "scripts": {
        "start": "npm install && npm-run-all babel uglify-for-hosting uglify-for-debugging build-html && npm-run-all --parallel watch host debug",
        "watch": "npm-run-all --parallel watch-babel watch-test watch-uglify-for-hosting watch-uglify-for-debugging watch-build-html watch-jshint",
        "watch-babel": "chokidar src/**.js --command \"npm run-script babel\"",
        "watch-test": "chokidar dist/index.js spec/**.js --command \"npm test\"",
        "watch-uglify-for-hosting": "chokidar dist/index.js --command \"npm run-script uglify-for-hosting\"",
        "watch-uglify-for-debugging": "chokidar dist/index.js --command \"npm run-script uglify-for-debugging\"",
        "watch-jshint": "chokidar src/**.js --command \"npm run-script jshint\"",
        "watch-build-html": "chokidar build-html.js src/favicon.png --command \"npm run-script build-html\"",
        "test": "nyc --check-coverage --lines 100 --functions 100 --branches 100 --statements 100 --include dist/index.js jasmine",
        "jshint": "babel-node ./concat-jshint.js && jshint dist/jshint.js",
        "babel": "mkdirp dist && babel --config-file ./browser.babelrc src --ignore src/header.js --out-file dist/index.js",
        "uglify-for-hosting": "uglifyjs --compress --mangle --toplevel src/header.js dist/index.js --output dist/index.min.js",
        "uglify-for-debugging": "uglifyjs --beautify --output dist/debugger.js src/header.js dist/index.js",
        "build-html": "babel-node ./build-html.js",
        "host": "mkdirp dist && cd dist && http-static",
        "debug": "electron -r @babel/register ./debugger/main.js",
        "upload-coverage": "nyc report --reporter=text-lcov | coveralls"
    },
    "devDependencies": {
        "@babel/cli": "7.0.0-beta.42",
        "@babel/core": "7.0.0-beta.42",
        "@babel/node": "7.0.0-beta.42",
        "@babel/preset-env": "7.0.0-beta.42",
        "@babel/register": "7.0.0-beta.42",
        "chokidar-cli": "1.2.0",
        "concat": "1.0.3",
        "coveralls": "3.0.0",
        "electron": "1.8.4",
        "favicons": "5.0.0",
        "gl-matrix": "2.4.0",
        "glob": "7.1.2",
        "html-minifier": "3.5.12",
        "http-static": "0.1.1",
        "imagemin": "5.3.1",
        "imagemin-pngcrush": "5.1.0",
        "jasmine": "3.1.0",
        "jshint": "2.9.5",
        "mkdirp": "0.5.1",
        "npm-run-all": "4.1.2",
        "nyc": "11.6.0",
        "rewire": "3.0.2",
        "uglify-js": "3.3.16"
    },
    "dependencies": {}
}
